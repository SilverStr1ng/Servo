{
  "name": "fbx-converter",
  "version": "1.0.0",
  "description": "FBX to GLB converter with optimization",
  "main": "./out/main/index.js",
  "author": "GitHub Copilot",
  "repository": {
    "type": "git",
    "url": "https://github.com/SilverStr1ng/Servo.git"
  },
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts,.svelte --fix",
    "typecheck:node": "tsc --p tsconfig.node.json --noEmit",
    "typecheck:renderer": "svelte-check --tsconfig tsconfig.web.json",
    "typecheck": "npm run typecheck:node && npm run typecheck:renderer",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.fbx-converter.app",
    "productName": "FBX Converter Library",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "resources/icon/android-chrome-512x512.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FBX Converter",
      "uninstallerIcon": "resources/icon/favicon.ico",
      "installerHeaderIcon": "resources/icon/favicon.ico",
      "include": "resources/installer.nsh"
    },
    "extraResources": [
      {
        "from": "resources",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "out/**/*"
    ],
    "asarUnpack": [
      "resources/bin/**/*"
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@silverstr1ng/servo-core": "workspace:*",
    "clsx": "^2.0.0",
    "draco3dgltf": "^1.5.7",
    "lucide-svelte": "^0.300.0",
    "meshoptimizer": "^0.21.0",
    "sharp": "^0.33.2",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^18.19.4",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.6.4",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
